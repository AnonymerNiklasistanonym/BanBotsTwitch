{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$ref": "#/definitions/Credentials",
    "definitions": {
        "Credentials": {
            "type": "object",
            "properties": {
                "$schema": {
                    "type": "string"
                },
                "clientId": {
                    "type": "string"
                },
                "clientSecret": {
                    "type": "string"
                },
                "scopes": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "redirectPort": {
                    "type": "number"
                }
            },
            "required": [
                "clientId",
                "clientSecret",
                "scopes",
                "redirectPort"
            ],
            "additionalProperties": false
        }
    }
}